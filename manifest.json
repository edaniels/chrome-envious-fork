{
  "manifest_version": 3,
  "name": "Envious",
  "version": "1.4",
  "description": "Replace matching URL requests from one domain to another.",
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "webRequest"
  ],
  "host_permissions": ["*://*/*"],
  "optional_host_permissions": ["*://*/*"],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "icons": { "128": "icon-128.png" },
  "action": {
    "default_icon": {
      "32": "icon-32.png"
    },
    "default_title": "Envious",
    "default_popup": "popup.html"
  }
}
